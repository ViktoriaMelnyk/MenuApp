@model IEnumerable<Recipe>

@{
    ViewData["Title"] = "Recipe";
}

    <section class="wrapper ">
        <div class="container">
            <div class="user__page">
                <aside class="user__page-aside">
                    <div class="aside__item">
                        <div class="aside__inner">
                            <div class="aside__title">
                                Your Data
                            </div>
                            <a href="" class="banner__btn aside__btn">Edit</a>
                        </div>

                        <ul class="data__list">
                            <li>Name: <span>Vitinka</span></li>
                            <li>Age: <span>23</span></li>
                            <li>Weight: <span>73</span></li>
                            <li>Height: <span>171</span></li>
                        </ul>
                    </div>
                    <div class="aside__item">
                        <div class="aside__title">
                            Your BRM/ARM
                        </div>
                        <ul class="data__list">
                            <li>BRM: <span>1232</span></li>
                            <li>ARM: <span>23454</span></li>
                        </ul>
                    </div>
                </aside>
                <div class="user-page__content">
                    <div class="user-page__items">
                        @if (Model.Count() > 0)
                        {
                            foreach (var recipe in Model)
                            {
                                <div class="user-page__item">
                                    <div class="user-page__item-img" style="background-image: url(@recipe.Image_url);"></div>
                                    <div class="user-page__item-info">
                                        <div class="user-page__item-title">@recipe.Title</div>
                                        <ul>
                                            <li>Level: <span> @recipe.Difficulty</span></li>
                                            <li>Kcal: <span> @recipe.Kcal</span></li>
                                            <li>Prep time: <span> @recipe.Time</span></li>
                                        </ul>
                                    </div>
                                    <a href="@recipe.Source_link" class="banner__btn user-page__item-btn">View recipe </a>
                                </div>
                            }

                        }
                        else
                        {
                            <p> Nie masz receptów</p>
                        }


                    </div>
                </div>
            </div>
        </div>

    </section>



